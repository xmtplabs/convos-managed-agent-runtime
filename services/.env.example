# Services
PORT=3002
SERVICES_API_KEY=your-services-secret

# Database (separate Postgres instance — services owns its own DB)
DATABASE_URL=postgresql://...

# Pool DB (optional, one-time backfill — set to populate instance_infra from pool's instances table)
# Remove after first successful migration.
# POOL_DATABASE_URL=postgresql://...

# Railway
RAILWAY_API_TOKEN=your-railway-token
RAILWAY_PROJECT_ID=your-project-id
RAILWAY_ENVIRONMENT_ID=your-environment-id
# RAILWAY_ENVIRONMENT_NAME=dev  (alternative to RAILWAY_ENVIRONMENT_ID)
RAILWAY_RUNTIME_IMAGE=ghcr.io/xmtplabs/convos-runtime:latest

# OpenRouter (management key — creates per-instance keys)
OPENROUTER_MANAGEMENT_KEY=sk-or-v1-...
OPENROUTER_KEY_LIMIT=20
OPENROUTER_KEY_LIMIT_RESET=monthly

# AgentMail
AGENTMAIL_API_KEY=
AGENTMAIL_DOMAIN=

# Telnyx
TELNYX_API_KEY=

# Instance env vars (passed through to runtime)
OPENCLAW_PRIMARY_MODEL=openrouter/anthropic/claude-sonnet-4-6
XMTP_ENV=dev
POOL_API_KEY=your-shared-pool-secret
BANKR_API_KEY=
TELNYX_PHONE_NUMBER=
TELNYX_MESSAGING_PROFILE_ID=
