{
  "name": "convos-agents-services",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx --env-file=.env --watch src/index.ts",
    "start": "tsx src/index.ts",
    "db:migrate": "tsx --env-file=.env src/db/migrate.ts",
    "db:migrate:drop": "tsx --env-file=.env src/db/migrate.ts --drop",
    "test": "tsx --env-file=.env --test src/smoke.test.ts",
    "clean-providers": "tsx --env-file=.env scripts/clean-providers.mjs"
  },
  "dependencies": {
    "express": "^5.1.0",
    "nanoid": "^5.1.5",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  }
}
