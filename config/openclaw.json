{
  "gateway": {
    "mode": "local",
    "port": 18789,
    "bind": "loopback",
    "auth": {
      "mode": "token"
    },
    "controlUi": {
      "allowInsecureAuth": true
    }
  },
  "agents": {
    "defaults": {
      "workspace": "~/.openclaw/workspace",
      "skipBootstrap": true,
      "model": {
        "primary": "${OPENCLAW_PRIMARY_MODEL}"
      },
      "subagents": {
        "model": "openai/gpt-5.1-codex",
        "thinking": "medium",
        "maxConcurrent": 4,
        "archiveAfterMinutes": 30
      }
    },
    "list": [
      {
        "id": "main-agent",
        "default": true,
        "name": "Concierge",
        "subagents": {
          "allowAgents": ["browser-automation-subagent", "email-agent", "exa-search"]
        }
      },
      {
        "id": "browser-automation-subagent",
        "name": "Web Automation",
        "tools": {
          "allow": ["smooth-browser"],
          "deny": ["agentmail", "exa-search"]
        }
      },
      {
        "id": "email-agent",
        "name": "Email Agent",
        "tools": {
          "allow": ["agentmail"],
          "deny": ["smooth-browser", "exa-search"]
        }
      }
    ]
  },
  "plugins": {
    "slots": {
      "memory": "none"
    },
    "load": {},
    "entries": {
      "convos": {
        "enabled": true
      }
    }
  },
  "skills": {
    "entries": {
      "bankr": {
        "enabled": true,
        "config": {
          "apiKey": "${BANKR_API_KEY}",
          "apiUrl": "https://api.bankr.bot"
        },
        "env": {  
          "BANKR_API_KEY": "${BANKR_API_KEY}"
        }
      },
      "agentmail": {
        "enabled": true,
        "apiKey": "${AGENTMAIL_API_KEY}",
        "env": {
          "AGENTMAIL_API_KEY": "${AGENTMAIL_API_KEY}",
          "AGENTMAIL_INBOX_ID": "convos@agentmail.to"
        }
      },
      "exa-search": {
        "enabled": true,
        "apiKey": "${EXA_SEARCH_API_KEY}",
        "env": {
          "EXA_SEARCH_API_KEY": "${EXA_SEARCH_API_KEY}"
        }
      },
      "smooth-browser": {
        "enabled": true,
        "apiKey": "${SMOOTH_BROWSER_API_KEY}",
        "env": {
          "SMOOTH_BROWSER_API_KEY": "${SMOOTH_BROWSER_API_KEY}"
        }
      }
    }
  },
  "channels": {
    "convos": {
      "XMTP_ENV": "dev",
      "enabled": true
    }
  },
  "tools": {
    "profile": "full",
    "deny": ["web_search", "web_fetch", "browser"],
    "exec": {
      "host": "gateway",
      "security": "full",
      "ask": "off"
    },
    "subagents": {
      "tools": {
        "deny": ["web_search", "web_fetch", "browser"]
      }
    }
  }
}