{
  "gateway": {
    "mode": "local",
    "port": 18789,
    "bind": "loopback",
    "auth": {
      "mode": "token"
    },
    "controlUi": {
      "allowInsecureAuth": true
    }
  },
  "agents": {
    "defaults": {
      "workspace": "~/.openclaw/workspace",
      "skipBootstrap": true,
      "model": {
        "primary": "${OPENCLAW_PRIMARY_MODEL}"
      },
      "subagents": {
        "model": "${OPENCLAW_PRIMARY_MODEL}",
        "thinking": "medium",
        "maxConcurrent": 4,
        "archiveAfterMinutes": 30
      }
    },
    "list": [
      {
        "id": "main-agent",
        "default": true,
        "name": "Concierge",
        "subagents": {
          "allowAgents": [
            "browser-automation-subagent",
            "email-subagent",
            "crypto-subagent"
          ]
        }
      },
      {
        "id": "browser-automation-subagent",
        "name": "Web Automation",
        "tools": {
          "allow": ["smooth-browser"]
        }
      },
      {
        "id": "email-subagent",
        "name": "Email Agent",
        "tools": {
          "deny": ["smooth-browser"]
        }
      },
      {
        "id": "crypto-subagent",
        "name": "Crypto Agent",
        "tools": {
          "deny": ["smooth-browser"]
        }
      }
    ]
  },
  "plugins": {
    "slots": {
      "memory": "none"
    },
    "load": {},
    "entries": {
      "convos": {
        "enabled": true
      }
    }
  },
  "skills": {
    "entries": {
      "bankr": {
        "enabled": true,
        "config": {
          "apiKey": "${BANKR_API_KEY}",
          "apiUrl": "https://api.bankr.bot"
        },
        "env": {
          "BANKR_API_KEY": "${BANKR_API_KEY}"
        }
      },
      "agentmail": {
        "enabled": true,
        "apiKey": "${AGENTMAIL_API_KEY}",
        "env": {
          "AGENTMAIL_API_KEY": "${AGENTMAIL_API_KEY}",
          "AGENTMAIL_INBOX_ID": "convos@agentmail.to"
        }
      },
      "smooth-browser": {
        "enabled": true,
        "apiKey": "${SMOOTH_BROWSER_API_KEY}",
        "env": {
          "SMOOTH_BROWSER_API_KEY": "${SMOOTH_BROWSER_API_KEY}"
        }
      }
    }
  },
  "channels": {
    "convos": {
      "XMTP_ENV": "dev",
      "enabled": true
    }
  },
  "tools": {
    "deny": [],
    "exec": {
      "host": "gateway",
      "security": "full",
      "ask": "off"
    },
    "web": {
      "search": {
        "provider": "brave",
        "maxResults": 5,
        "timeoutSeconds": 30,
        "apiKey": "${BRAVE_API_KEY}"
      }
    }
  }
}
